{# src/Dur/PlatformBundle/Resources/views/Advert/form.php.twig #}

{% block head %}
  <script type="text/javascript" src="http://localhost/Symfony/web/ckeditor/ckeditor.js"></script>
{% endblock %}

<form action="{{ path('mailing_send') }}" method="post">
  <div class="well">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    {% else %}
      <div class="form-group">
            Votre email
          <div class="col-sm-4">
            <input id="email" name="email" type="text">
          </div>
      </div>

      <div class="form-group">
            Votre identifiant
          <div class="col-sm-4">
            <input id="username" name="username"  type="text">
          </div>
      </div>
    {% endif %}

      <div class="form-group">
            Sujet*
          <div class="col-sm-4">
            <input id="subject" name="subject"  type="text" required>
          </div>
      </div>

      <div class="form-group">
            Message*
          <div class="col-sm-4">
            <textarea id="content" name="content"  required>
              Votre message ici.
            </textarea>
          </div>
      </div>
      <button>Envoyer</button>
  </div>
</form>
{% block javascripts %}
<script type="text/javascript">
  CKEDITOR.replace( 'dur_platformbundle_advert[content]' );
</script>
{% endblock %}